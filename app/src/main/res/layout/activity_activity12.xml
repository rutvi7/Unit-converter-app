<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity12"
    android:background="@color/colorPrimaryDark">

    <include layout="@layout/toolbar" />
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#000000"
        android:layout_marginTop="65dp"
        >





        <LinearLayout
            android:id="@+id/LinearLayoutFrom"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/TextViewFrom"
                android:layout_width="70dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="From"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-smallcaps"></TextView>

            <Spinner
                android:id="@+id/SpinnerFrom"
                android:layout_width="290dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginLeft="15dp"
                android:popupBackground="#FF9800"
                android:popupTheme="@style/Spinner"
                android:background="@drawable/spinner"
                ></Spinner>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutTo"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:layout_marginTop="100dp">

            <TextView
                android:text="To"
                android:id="@+id/TextViewTo"
                android:layout_width="70dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:padding="10dp"
                app:fontFamily="sans-serif-smallcaps">
            </TextView>

            <Spinner
                android:id="@+id/SpinnerTo"
                android:layout_width="290dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:popupBackground="#FF9800"
                android:background="@drawable/spinner"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:layout_marginTop="200dp">

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="85dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="Value"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-smallcaps"></TextView>

            <EditText
                android:id="@+id/EditTextValue"

                android:layout_width="281dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-smallcaps"
                android:inputType="numberDecimal"
                android:text=""
                android:textColor="#ffffff"
                android:textColorLink="#F4F0F0"
                android:textStyle="bold"
                android:textCursorDrawable="@drawable/cursor"
                android:backgroundTint="@color/cursor"></EditText>
        </LinearLayout>


        <Button
            android:id="@+id/button_convert"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="@drawable/button"
            android:onClick="convert"
            android:text="Convert"
            android:textSize="16sp"

            android:textStyle="bold"
            app:fontFamily="@font/allerta_stencil" />

        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="350dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            >

            <TextView
                android:id="@+id/TextViewString"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:text="Result"
                android:textColor="#FF9800"
                android:textSize="20sp"
                android:textStyle="bold"
                app:fontFamily="sans-serif-smallcaps"></TextView>

            <EditText
                android:id="@+id/TextViewResult"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="number"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#ffffff"
                android:textCursorDrawable="@drawable/cursor"
                android:backgroundTint="@color/cursor"></EditText>

        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>